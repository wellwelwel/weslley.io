{
  "name": "weslley-io",
  "version": "0.1.0",
  "license": "AGPL-3.0-only",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wellwelwel"
  },
  "scripts": {
    "docusaurus": "docusaurus",
    "prestart": "tsx tools/host.ts",
    "start": "docusaurus start --host 0.0.0.0",
    "prestart:en": "tsx tools/host.ts",
    "start:en": "docusaurus start --locale en",
    "prebuild": "tsx tools/build-missing-content.ts",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "clear": "docusaurus clear",
    "reset": "(npm run clear || true) && rm -rf node_modules package-lock.json && npm i && npm run update",
    "prepreview": "tsx tools/host.ts",
    "preview": "npm run build && docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "update": "pu minor && npm i && (npm audit fix || true)",
    "postupdate": "npm run lint:fix",
    "purge": "tsx --env-file-if-exists=.env tools/purge-cache.mts",
    "test": "npm run clear && npm run lint && npm run typecheck && npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/module-type-aliases": "3.7.0",
    "@docusaurus/preset-classic": "3.7.0",
    "@docusaurus/tsconfig": "3.7.0",
    "@docusaurus/types": "3.7.0",
    "@easyops-cn/docusaurus-search-local": "^0.48.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@mdx-js/react": "^3.1.0",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/webpack-env": "^1.18.5",
    "clsx": "^2.1.1",
    "docusaurus-plugin-sass": "^0.2.6",
    "jsonc.min": "^1.1.0",
    "lucide-react": "^0.473.0",
    "packages-update": "^2.0.0",
    "poku": "^2.7.1",
    "prettier": "^3.4.2",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.15.0",
    "react-parallax-tilt": "^1.7.272",
    "sass": "^1.83.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "browserslist": {
    "production": [
      ">0%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  },
  "private": true
}
