{
  "name": "weslley-io",
  "version": "0.1.0",
  "license": "AGPL-3.0-only",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wellwelwel"
  },
  "scripts": {
    "docusaurus": "docusaurus",
    "prestart": "tsx tools/host.ts",
    "start": "npm run i18n:sync && concurrently \"npm run start:website\" \"npm run start:server\"",
    "start:website": "docusaurus start --host 0.0.0.0",
    "start:server": "wrangler dev --ip 0.0.0.0",
    "prebuild": "npm run i18n:sync",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "clear": "docusaurus clear",
    "reset": "(npm run clear || true) && rm -rf node_modules package-lock.json && npm i && npm run update",
    "i18n:sync": "tsx tools/sync-i18n-articles.ts",
    "prepreview": "tsx tools/host.ts",
    "serve": "npm run build && docusaurus serve --host 0.0.0.0",
    "preview": "concurrently \"npm run serve\" \"npm run start:server\"",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "update": "pu minor && npm i && (npm audit fix || true) && npm run lint:fix",
    "purge": "tsx --env-file-if-exists=.env tools/purge-cache.mts",
    "test": "poku -r=compact ./test",
    "test:ci": "npm run clear && npm run lint && npm run typecheck && npm test && npm run build",
    "countty:secret": "wrangler secret put COUNTTY_TOKEN",
    "countty:create": "countty create",
    "countty:views": "countty views",
    "countty:peek": "countty peek",
    "countty:backup": "countty backup",
    "countty:list": "countty list"
  },
  "dependencies": {
    "countty": "^2.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251219.0",
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@easyops-cn/docusaurus-search-local": "^0.52.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@mdx-js/react": "^3.1.1",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/webpack-env": "^1.18.8",
    "animejs": "^4.2.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "docusaurus-plugin-sass": "^0.2.6",
    "github-slugger": "^2.0.0",
    "jsonc.min": "^1.1.0",
    "lucide-react": "^0.561.0",
    "packages-update": "^2.0.0",
    "poku": "^3.0.3-canary.86e2832e",
    "prettier": "^3.7.4",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-parallax-tilt": "^1.7.315",
    "remark-directive-rehype": "^0.4.2",
    "sass": "^1.96.0",
    "sonner": "^2.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0",
    "yaml": "^2.8.2"
  },
  "browserslist": {
    "production": [
      ">0%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  },
  "private": true
}
